@model WebApplication1.Models.Member

@{
    ViewData["Title"] = "MemberLogin";
}
<!DOCTYPE html>
<html lang="en">
<header class="header">
    @await Html.PartialAsync("_MainMenu.cshtml")
</header>
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- StyleSheet -->
    <link rel="stylesheet" href="~/css/memberlogin.css" asp-append-version="true" />
    

    <title>Member Login Page</title>
</head>
<body>
    <div class="wrapper">
        <div class="container main">
            <div class="row">
                <div class="col-md-6 side-image">
                </div>
                <div class="col-md-6 right">
                    <form method="post" action="~/Home/LoginMember">
                        <div class="input-box">
                            <header>Welcome to NP Courier Service!</header>
                            <div class="input-field">
                                <input type="email" name="txtLoginID" class="input" id="email" required>
                                <label for="email">Email</label>
                            </div>
                            <div class="input-field">
                                <input type="password" name="txtPassword" class="input" id="password" required>
                                <label for="password">Password</label>
                            </div>
                            <div class="input-field">
                                <input type="submit" class="submit" value="Sign In">

                            </div>
                            <br />
                            <span style="color:red;">@TempData["Message"]</span>
                            <div class="signin">
                                <span>Don't have an account? <a href="~/Home/MemberSignUp">Register Now</a></span>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Login Js Section -->
    <script src="~/js/login.js" asp-append-version="true"></script>

</body>
</html>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}