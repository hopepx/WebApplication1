@model IEnumerable<WebApplication1.Models.PaymentTransaction>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Payment Transactions</title>
    <style>
        .container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: white;
        }

        .table {
            width: 80%;
            border-collapse: collapse;
            text-align: center;
            font-family: Arial, sans-serif;
            max-height: 400px;
            overflow-y: auto;
        }

            .table th,
            .table td {
                border: 1px solid #000;
                padding: 8px;
            }

            .table thead {
                background-color: #000;
                color: #fff;
            }

            .table tbody tr:nth-child(even) {
                background-color: #fff;
            }

            .table tbody tr:hover {
                background-color: #e9e9e9;
            }

        .no-record {
            color: red;
            font-style: italic;
        }
    </style>
</head>
<body>
    <br>
    <br>
    <br>
    <br>
    <br>

    <div class="container">
        @if (Model.ToList().Count > 0)
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>Parcel ID</th>
                        <th>Currency</th>
                        <th>Amount Transferred</th>
                        <th>Transaction Type</th>
                        <th>Transaction Date</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.ParcelID</td>
                            <td>@item.Currency</td>
                            <td>@item.AmtTran.ToString("F2")</td>
                            <td>@item.TranType</td>
                            <td>@item.TranDate.ToString("dd/MM/yyyy")</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <span class="no-record">No record found!</span>
        }
    </div>
</body>
</html>